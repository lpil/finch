<h2>Show person</h2>

<ul>

  <li>
    <strong>Name:</strong>
    <%= @person.name %>
  </li>

  <li>
    <strong>Email:</strong>
    <%= @person.email %>
  </li>

  <li>
    <strong>Bio:</strong>
    <%= @person.bio %>
  </li>

  <li>
    <strong>Number of pets:</strong>
    <%= @person.number_of_pets %>
  </li>

</ul>

<%= link "Edit", to: person_path(@conn, :edit, @person) %>
<%= link "Back", to: person_path(@conn, :index) %>
